{
    "plugins": [
        "@typescript-eslint"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser"
    },
    "env": {
        "node": true
    },
    "ignorePatterns": ["node_modules/", "*.d.ts"],
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:vue/base"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "tabWidth": 4,
                "trailingComma": "es5"
            }
        ],
        "no-unused-vars": "off"
    }
}
